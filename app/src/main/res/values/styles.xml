<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="fontFamily">@font/open_sans</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationStyle</item>
    </style>

    <style name="OpenSansTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/open_sans_bold</item>
    </style>

    <style name="OpenSansButtonStyle" parent="android:Widget.Holo.Button">
        <item name="android:fontFamily">@font/open_sans_bold</item>
    </style>

    <style name="WindowAnimationStyle">
        <item name="android:windowEnterAnimation">@android:anim/linear_interpolator</item>
    </style>

    <style name="TextInputLayoutBlackOutlinedBoxCorners" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomEnd">@dimen/no_dimen</item>
        <item name="boxCornerRadiusBottomStart">@dimen/no_dimen</item>
        <item name="boxCornerRadiusTopStart">@dimen/no_dimen</item>
        <item name="boxCornerRadiusTopEnd">@dimen/no_dimen</item>
        <item name="android:layout_marginTop">@dimen/hint_text_input_margin_top</item>
        <item name="android:layout_marginEnd">@dimen/margin_xbig_60</item>
        <item name="android:layout_marginStart">@dimen/margin_xbig_60</item>
        <item name="errorEnabled">true</item>
    </style>

    <style name="ButtonSignIn">
        <item name="android:backgroundTint">@android:color/black</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="cornerRadius">@dimen/no_dimen</item>
        <item name="android:textSize">@dimen/text_size_12</item>
    </style>

    <style name="HintTextSignIn">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/text_size_12</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextSignIn">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">normal</item>
        <item name="android:paddingStart">@dimen/margin_normal_30</item>
        <item name="android:paddingEnd">@dimen/margin_normal_30</item>
        <item name="android:layout_marginTop">@dimen/margin_normal_16</item>
        <item name="android:textSize">@dimen/text_size_12</item>
    </style>

    <style name="TextHeaderLoginTitle">
        <item name="android:layout_marginTop">@dimen/margin_big_45</item>
        <item name="android:gravity">center</item>
        <item name="android:text">@string/text_title_target_mvd</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_20</item>
    </style>

    <style name="TextCreateTarget">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/text_size_12</item>
        <item name="android:textAllCaps">true</item>
    </style>
</resources>
