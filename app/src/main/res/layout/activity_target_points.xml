<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.main.targetpoint.TargetPointsActivity">

    <include
        layout="@layout/layout_toolbar"
        map:layout_constraintTop_toTopOf="parent"
        android:id="@+id/toolbar"/>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragment_map"
        android:layout_width="match_parent"
        android:layout_height="@dimen/no_dimen"
        map:layout_constraintTop_toBottomOf="@+id/toolbar"
        map:layout_constraintBottom_toBottomOf="@id/go_to_target_container"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        map:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/go_to_target_container"
        android:background="@android:color/white"
        android:paddingVertical="@dimen/margin_small_10"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:src="@drawable/ic_target"
            android:contentDescription="@string/create_target_icon" />

        <TextView
            android:id="@+id/create_target_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:text="@string/create_new_target"
            android:textSize="@dimen/text_size_12"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginTop="@dimen/margin_small_10"
            android:textAllCaps="true"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>