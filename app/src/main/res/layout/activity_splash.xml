<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.main.splash.SplashActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/text_title_target_mvd"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.36"
        android:textSize="@dimen/text_size_30"
        android:textStyle="bold"
        android:textColor="@android:color/black"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_main_header"
        android:src="@drawable/bc_header_green_yellow"
        app:layout_constraintBottom_toBottomOf="parent"
        android:rotationX="180"
        android:layout_marginBottom="@dimen/margin_negative_50"/>
</androidx.constraintlayout.widget.ConstraintLayout>